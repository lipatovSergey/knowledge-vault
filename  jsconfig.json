{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "types": ["jest", "node"],
    "moduleDetection": "legacy",
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },

  "typeAcquisition": { "enable": true },
  "include": ["src", "tests"]
}
